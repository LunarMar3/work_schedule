<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    android:fitsSystemWindows="true"
    tools:context=".design_activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:padding="3dp"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/node_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/delete_node_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除节点" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="400dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <pers.ember.myapplication.View.ProgressGraphView
                    android:id="@+id/progressGraphView"
                    android:layout_width="2000dp"
                    android:layout_height="1500dp"
                    android:background="@drawable/background" />
            </ScrollView>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:fitsSystemWindows="true"
            android:background="#CCCCCC" />

        <ScrollView
            android:id="@+id/node_form"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:descendantFocusability="beforeDescendants"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="节点id"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/input_node_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入节点id" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="节点名称"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/input_node_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入节点名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="节点描述"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/input_node_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入节点描述" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="前节点"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/input_node_before_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="位置坐标"
                    android:textSize="16sp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/decrease_x_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <EditText
                        android:id="@+id/input_node_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="X坐标" />

                    <Button
                        android:id="@+id/increase_x_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/decrease_y_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <EditText
                        android:id="@+id/input_node_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Y坐标" />

                    <Button
                        android:id="@+id/increase_y_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <Button
                    android:id="@+id/save_node_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="保存该节点" />

                <Button
                    android:id="@+id/save_progress_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="保存该进度" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- 主内容区域 -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation" />

        <!-- 底部导航栏 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav_menu" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>